{
	"name": "budgeted-ui",
	"version": "1.0.0",
	"description": "a gui for your budget data",
	"main": "main.js",
	"scripts": {
		"build:main": "tsc",
		"build:renderer": "tsx esbuild.config.mts",
		"dev:main": "nodemon -w src/main -e ts -x \"tsc\"",
		"dev:renderer": "tsx esbuild.config.mts --watch",
		"dev:electron": "nodemon -w dist/src/main -x \"electron ./dist/src/main/main.js\"",
		"dev": "run-p dev:*",
		"test": "echo \"Error: no test specified\" && exit 1",
		"format": "prettier --write ."
	},
	"author": "politicker",
	"license": "MIT",
	"devDependencies": {
		"@types/react": "^18.2.46",
		"@types/react-dom": "^18.2.18",
		"electron": "^29.0.0-alpha.1",
		"esbuild": "^0.19.10",
		"esbuild-css-modules-plugin": "^3.1.0",
		"prettier": "^3.1.1",
		"prisma": "^5.7.1",
		"ts-node": "^10.9.2",
		"typescript": "^5.3.3",
		"typescript-plugin-css-modules": "^5.0.2"
	},
	"dependencies": {
		"@gregoranders/csv": "^0.0.13",
		"@prisma/client": "^5.7.1",
		"dotenv-expand": "^10.0.0",
		"nodemon": "^3.0.2",
		"npm-run-all": "^4.1.5",
		"react": "^18.2.0",
		"react-dom": "^18.2.0",
		"sqlite3": "^5.1.7-rc.0",
		"tsx": "^4.7.0"
	},
	"prisma": {
		"seed": "ts-node prisma/seed.ts"
	}
}
